<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/track"
    tools:context=".Fragments.ProfileFragment">

    <RelativeLayout
        android:layout_width="340dp"
        android:layout_height="380dp"
        android:id="@+id/profileRL"
        android:layout_gravity="center"
        android:background="@drawable/background_singnin_signup">


        <TextView
            android:layout_width="300dp"
            android:layout_height="45dp"
            android:id="@+id/nameET"
            android:text="Name"
            android:textStyle="italic"
            android:textSize="25sp"
            android:gravity="center"
            android:layout_marginTop="30dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/edittext_bg"
            android:textColor="@color/Background"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/chngPassET"
            android:layout_below="@+id/nameET"
            android:text="Change Password"
            android:textStyle="italic"
            android:textSize="25sp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:drawableRight="@drawable/ic_arrow"
            android:layout_marginRight="20dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/bookdTV"
            android:layout_below="@+id/chngPassET"
            android:text="Seat Booked"
            android:textStyle="italic"
            android:textSize="25sp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:drawableRight="@drawable/ic_arrow"
            android:layout_marginRight="20dp"
            />
        <Button
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/logoutBTN"
            android:layout_below="@+id/bookdTV"
            android:text="Logout"
            android:textStyle="italic"
            android:gravity="center"
            android:layout_marginTop="30dp"
            android:background="@drawable/button_bg"
            android:layout_centerHorizontal="true"
            />
    </RelativeLayout>

</FrameLayout>